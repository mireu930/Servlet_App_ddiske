<!--배포서술자-->
 <!-- Servlet 객체 생성 FQDN(풀퀄리티도메인네임)-->
  <servlet>
  	<servlet-name>homeController</servlet-name>
  	<servlet-class>aaa.A</servlet-class>	
  </servlet>
  
  <!-- 어떤 요청이 왔을떄 누구를 실행 -->
  <servlet-mapping>
  	<servlet-name>homeController</servlet-name>
  	<url-pattern>/index.do</url-pattern>
  </servlet-mapping>
  
<servlet>
	<servlet-name>productController</servlet-name>
	<servlet-class>com.root.app.products.ProductController</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>productController</servlet-name>
	<url-pattern>/products/*</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>accountController</servlet-name>
	<servlet-class>com.root.app.accounts.AccountController</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>accountController</servlet-name>
	<url-pattern>/accounts/*</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>userController</servlet-name>
	<servlet-class>com.root.app.users.UserController</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>userController</servlet-name>
	<url-pattern>/users/*</url-pattern>
</servlet-mapping>

</web-app>